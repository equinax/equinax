# Quant Backtest Backend Configuration
# Copy this file to .env and modify as needed
#
# For Docker development: cp .env.docker .env
# For local development: cp .env.example .env (then modify DATABASE_URL)

# =============================================================================
# Database Configuration
# =============================================================================
# Docker development:
#   DATABASE_URL=postgresql+asyncpg://quant:quant_dev_password@db:5432/quantdb
# Local development (if running PostgreSQL locally):
#   DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/quantdb

DATABASE_URL=postgresql+asyncpg://quant:quant_dev_password@localhost:5432/quantdb

# =============================================================================
# Redis Configuration
# =============================================================================
# Docker development:
#   REDIS_URL=redis://redis:6379/0
# Local development:
#   REDIS_URL=redis://localhost:6379/0

REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Security Configuration
# =============================================================================
# IMPORTANT: Change these values in production!
# Generate secure keys: python -c "import secrets; print(secrets.token_urlsafe(32))"

SECRET_KEY=change-this-in-production
JWT_SECRET_KEY=change-this-jwt-secret-in-production

# =============================================================================
# Application Configuration
# =============================================================================

# Debug mode (set to false in production)
DEBUG=true

# CORS allowed origins (JSON array)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# =============================================================================
# Backtest Configuration
# =============================================================================

# Maximum number of concurrent backtests
MAX_CONCURRENT_BACKTESTS=10

# Backtest timeout in seconds
BACKTEST_TIMEOUT_SECONDS=300
